pipeline {
    parameters {
        string(name: 'VERSION', defaultValue: '1.2.0')
    }
    agent {
        dockerfile {
            label 'zip-job-docker'
	    additionalBuildArgs  '--build-arg version=${VERSION} --priviliged'
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'python3 /tmp/zip_job.py'
            }
        }
        stage('Publish') { 
            steps {
	    	rtServer (
		    id: "artifacory-telaviv",
		    username: "super-user",
		    password: "Qw12856!",
		    url: "http://artifactory-telaviv"
		)
		
                rtUpload (
		    serverId: 'artifactory-telaviv',
		    spec: '''{
			  "files": [
			    {
			      "pattern": '*${VERSION}.zip",
			      "target": "binary-storage/${VERSION}"
			    }
			 ]
		    }'''
		)
            }
        }
        stage('Report') { 
            steps {
                emailext body: '${cuurentBuild.result}', recipientProviders: ['agatheoush@gmail.com'], subject: 'Job Status' 
            }
        }
    }
}
